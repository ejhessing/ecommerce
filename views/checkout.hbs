<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce Project</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
    <link rel="stylesheet" href="styles/main.css">

  </head>
  <body>
    <header>
      <h1>E-commerce Project</h1>
      <a href="/"><button>Home</button></a>
      <a href="/about"><button>About</button></a>
      <a href="/cart"><button>Cart</button></a>
      <a href="/login"><button>Login</button></a>
      <hr>
    </header>
    <div class="container">

      
      <!-- Register -->
      <div class="row">
      <div class="one-half column">
        <h2>Register</h2>
        <section class="registration">
          <form class="checkoutForm" action="checkout" method="post">
            <label for="email">E-mail: </label>
            <input type="text" class="u-full-width" name="email">
            <label for="password">Password: </label>
            <input type="password" class="u-full-width" name="password">
            <label for="name">Name: </label>
            <input type="text" class="u-full-width" name="name">
            <label for="address">Address: </label>
            <textarea class="u-full-width" name="address" ></textarea>
            <label for="city">City: </label>
            <input type="text" class="u-full-width" name="city">
            <label for="country">Country: </label>
            <input type="text" class="u-full-width" name="country">
            <label for="postcode">Postcode: </label>
            <input type="text" class="u-half-width" name="postcode">

            <br>
            <input class="u-full-width button-primary" type="submit" name="submit" value="Register and Pay">
          </form>
        </div>


      <!-- Cart -->
        <div class="one-half column">
          
          
          <h2>Cart</h2>
            <table class="u-full-width">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                {{#each data}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{quantity}}</td>
                  <td>${{price}}.00</td>
                  <td>${{total}}.00</td>
                </tr>
                {{/each}}
                <tr>
                  <td><strong>Total</strong></td>
                  <td></td>
                  <td></td>
                  <td><strong>${{data.total}}.00</strong></td>
                </tr>
              </tbody>
            </table>
            <a href="/cart" ><button class="u-full-width" name="cart">Back to cart</button></a>

            <div id="coupon">
              <form class="coupon" action="coupon" method="post">
                <label for="discount"><h3>Coupon Code: </h3></label>
                <input type="text" class="u-half-width" name="coupon">
                <input class="u-half-width button-primary" type="submit" name="discount" value="Claim discount">
              </form>
            </div>
        </div>
      </div>
  </body>
</html>
